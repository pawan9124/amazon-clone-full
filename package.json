{
  "name": "backend",
  "version": "1.0.0",
  "description": "this is amazon backend in express and node",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "PORT=4000 node server.js",
    "client": "PORT=3001 npm start --prefix client",
    "build": "npm run build --prefix client",
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client && npm install --dev --prefix client"
  },
  "author": "pawan saket",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.23.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^4.0.0",
    "multiparty": "^4.2.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "socket.io": "^3.1.0",
    "stripe": "^8.129.0",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0"
  }
